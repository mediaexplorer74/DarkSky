<Page
    x:Class="DarkSky.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DarkSky"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" 
    xmlns:icons="using:Cube.UI.Icons" xmlns:glow="using:Cube.UI.Controls.Glow" 
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Grid>
        <StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="20" Text="DarkSky Alpha (Preview)"/>
            <TextBox 
                PlaceholderText="Username"
                Header="Username"
                Text="{Binding UsernameBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="10"
                />
            <TextBox 
                PlaceholderText="Password"
                Header="Password"
                Text="{Binding PasswordBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="10"
                />
            <Button Content="Login" 
                Command="{Binding LoginCommand}"
                Margin="10"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="10" />

        </StackPanel>
    </Grid>
</Page>
