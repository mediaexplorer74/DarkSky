<Application
    x:Class="DarkSky.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DarkSky"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <Application.Resources>
        <controls:XamlControlsResources>
            <controls:XamlControlsResources.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Cube.UI/Resources/ResourcesHub.xaml"/>
                <ResourceDictionary>
                    <LinearGradientBrush x:Key="HeartLinearGradientBrush" StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="Red" Offset="0.0" />
                        <GradientStop Color="#e96e60" Offset="1.0" />
                    </LinearGradientBrush>
                    <LinearGradientBrush x:Key="AccentLinearDownGradientBrush" StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{ThemeResource SystemAccentColorLight1}" Offset="0.0" />
                        <GradientStop Color="{ThemeResource SystemAccentColorLight2}" Offset="0.5" />
                        <GradientStop Color="{ThemeResource SystemAccentColorLight3}" Offset="1.0" />
                    </LinearGradientBrush>
                </ResourceDictionary>
            </controls:XamlControlsResources.MergedDictionaries>
        </controls:XamlControlsResources>
    </Application.Resources>
</Application>
